<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head.ejs') %>
</head>

<body>

    <section class="register-container">

        <h1>Cadastro</h1>

        <form action="/add" method="POST" class="formRegistration">

            <div class="formContent">

                <div class="formInfoPersonal">

                    <label for="name">Nome: </label>
                    <input type="text" name="name" id="name">


                    <label for="email">Email: </label>
                    <input type="email" name="email" id="email">

                </div>


                <div class="formInfoSkills">

                    <h3>Tecnologias:</h3>
                    <label for="js">JavaScript</label> <input type="checkbox" name="skills" value="JavaScript">
                    <label for="html">HTML</label> <input type="checkbox" name="skills" value="HTML">
                    <label for="css">CSS</label> <input type="checkbox" name="skills" value="CSS">
                    <label for="php">PHP</label> <input type="checkbox" name="skills" value="PHP">
                    <label for="python">PYTHON</label> <input type="checkbox" name="skills" value="PYTHON">

                </div>

            </div>

            <button type="submit" name="btn">Cadastrar</button>

        </form>

    </section>

    <section class="list-clients-container">


        <div class="list-clients-content">

            <table>

                <thead>

                    <tr>
                        <th colspan="5">Clientes Cadastrados</th>
                    </tr>

                </thead>

                <tbody>

                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Skills</th>
                    </tr>

                        <% clients.forEach(client => { %>
                            <tr>

                                <td class="td-name">
                                    <%=client.name%>
                                </td>
                                <td class="td-email">
                                    <%=client.email%>
                                </td>
                                <td class="td-skills">
                                    <%=client.skills %>
                                </td>
                                <th class="td-btn-edit">
                                    <a href="/edit?id=<%=client._id%>"><button class="btn btn-edit" id="btn-edit">Editar</button></a>
                                </th>
                                <th class="td-btn-remove">
                                    <a href="/remove/<%=client._id%>"><button class="btn btn-remove" id="btn-remove" >Remover</button></a>
                                </th>

                            </tr>
                        <% }); %> 
  
                </tbody>

                <tfoot>

                </tfoot>

            </table>

        </div>

    </section>

    <%- include('partials/foot.ejs') %>

</body>

</html>